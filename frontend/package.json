{
  "name": "knca-signer",
  "version": "1.0.2",
  "description": "An application for creating a test CA, signing XML using NCALayer and test user certificate, verifying xml signatures using Kalkan.",
  "main": "index.js",
  "scripts": {
    "serve": "vite --debug",
    "start": "vite --debug",
    "dev": "vite --debug",
    "build": "vite build --mode production && mkdir -p dist/src && cp -r src/pages dist/src/pages && cp -r src/i18n dist/src",
    "build:copy": "rm -rf ../backend/src/main/resources/static && mkdir -p ../backend/src/main/resources/static && cp -r dist/* ../backend/src/main/resources/static/",
    "changelog": "npx conventional-changelog -p angular -i CHANGELOG.md -s",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest run"
  },
  "devDependencies": {
    "@alpinejs/morph": "^3.15.0",
    "@eslint/js": "^9.9.0",
    "@vitest/coverage-v8": "3.2.4",
    "alpinejs": "^3.15.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^9.9.0",
    "globals": "^15.9.0",
    "jsdom": "^14.1.0",
    "postcss": "^8.4.32",
    "sass": "^1.69.5",
    "tailwindcss": "^3.4.0",
    "vite": "^4.0.0",
    "vitest": "^3.2.4"
  },
  "author": "https://github.com/gleb619",
  "license": "MIT",
  "dependencies": {
    "@owja/i18n": "^1.0.0-alpha.9",
    "htmx-ext-alpine-morph": "^2.0.1",
    "htmx.org": "^2.0.7"
  }
}
